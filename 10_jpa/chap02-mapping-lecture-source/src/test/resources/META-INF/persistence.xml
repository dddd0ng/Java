<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <!--엔터티 매니저 팩토리 식별하기 위한 이름 설정-->
    <persistence-unit name="jpatest">
        <!--엔터티는 설정에 따로 추가 할 예정-->

        <!--클래스 등록해주깅-->
<!--<class>member라는 클래스 넣어주면됨</class>-->
<!--        <class>com.swcamp.section01.entity.Member</class>-->
<!--        <class>com.swcamp.section02.column.Member</class>-->
<!--        <class>com.swcamp.section03.primarykey.subsection01.identity.Member</class>-->
<!--                <class>com.swcamp.section03.primarykey.subsection02.table.Member</class>-->
                <class>com.swcamp.section04.enumtype.Member</class>
        <!--        <class>com.swcamp.section05.compositekey.subsection01.embedded.Member</class>-->
<!--        <class>com.swcamp.section05.compositekey.subsection02.idclass.Member</class>-->


        <properties>

            <!--데이터베이스 연결 정보-->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/menudb"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="1221"/>

            <!--hibernate 설정(실행되는 sql 구문을 format형태로 보여주기)-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>


            <!--auto ddl설정-->

            <!--
            create : 애플리케이션 실행 시 기존 테이블이 있다면 drop,
            그리고 항상 create table 진행
            create-drop : 애플리케이션 실행 시 항상 create table 진행, 종료 시 drop
            update : 애플리케이션 시행 시 기준 테이블이 없다면 create table, 있다면 컬럼이 추가 될 때만 alter
           -->

            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>