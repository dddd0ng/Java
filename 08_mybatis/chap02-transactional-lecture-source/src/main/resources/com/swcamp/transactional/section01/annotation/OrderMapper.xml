<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swcamp.transactional.section01.annotation.OrderMapper">
    <insert id="insertOrder" parameterType="com.swcamp.transactional.section01.annotation.Order">
<!--        resultType을 적을 필요 x 적으면 에러남, 매개변수를 받아야함-->
        INSERT
            INTO TBL_ORDER
            (
              ORDER_DATE
            , ORDER_TIME
            , TOTAL_ORDER_PRICE
            )
            VALUES
            (
              #{orderDate}
            , #{orderTime}
            , #{totalOrderPrice}
            )
    </insert>

</mapper>