<!--    Association관계에서 resultMap 1개만 활용-->
    <resultMap id="menuAndCategoryResultMap"
               type="com.swcamp.xmlmapper.MenuAndCategoryDTO">
        <id property="menuCode" column="MENU_CODE"/>
        <result property="menuName" column="MENU_NAME"/>
        <result property="menuPrice" column="MENU_PRICE"/>
        <!--        <result property="categoryCode" column="CATEGORY_CODE"/>-->
        <result property="orderableStatus" column="ORDERABLE_STATUS"/>
<!--        resultMap 활용할시엔 javaType이 들어가고, id~result값넣음-->
        <association property="category" javaType="com.swcamp.xmlmapper.CategoryDTO">
            <id property="categoryCode" column="CATEGORY_CODE"/>
            <result property="categoryName" column="CATEGORY_NAME"/>
            <result property="refCategoryCode" column="REF=CATEGORY_CODE"/>
        </association>
    </resultMap>




