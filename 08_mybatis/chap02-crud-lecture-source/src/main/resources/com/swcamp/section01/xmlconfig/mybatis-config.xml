<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="dev">
        <environment id="dev">
            <transactionManager type="JDBC"/> <!--  JDBC 입력해야 수동 커밋(수동 오토 커밋) -->
            <dataSource type="POOLED">  <!--connection  pool 활용-->
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/menudb"/>
                <property name="username" value="root"/>
                <!--name-> username으로 변경해야 오류 안뜸-->
                <property name="password" value="1221"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/swcamp/section01/xmlconfig/menu-mapper.xml"/>
        <!-- xml mapper 해줘야함(등록해줘야 인식함)-->
<!-- resource에는 xml경로 적어주면됨  -->
    </mappers>

</configuration>