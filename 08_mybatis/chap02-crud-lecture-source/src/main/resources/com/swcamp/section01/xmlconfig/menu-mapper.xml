<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MenuMapper">

<!--   resultMap의 column속성은 ResultSet의 컬럼명을 써야함,(커럼명 또는 받침)-->
<!--    매핑을 필요한 것만 매핑해도 문제없이 객체에 담겨 반환된다.  -->
    <resultMap id="menuResultMap" type="com.swcamp.section01.xmlconfig.MenuDTO">
<!--        type에는 풀 패키지명으로 적어줘야함, 필드값에 매칭시켜주는것(MenuDTO ->[PK] menuCode)-->
        <id property="menuCode" column="MENU_CODE"/>
        <!--        pk컬럼은 id태그를 사용하면 속도 향상의 이점\-->
<!--        PK라서 id, 나머진 result-->
        <result property="menuName" column="MENU_NAME"/>
        <result property="menuPrice" column="MENU_PRICE"/>
        <result property="categoryCode" column="CATEGORY_CODE"/>
        <result property="orderableStatus" column="ORDERABLE_STATUS"/>

    </resultMap>
    <select id="selectAllMenus" resultMap="menuResultMap">
        SELECT
        MENU_CODE
        , MENU_NAME
        , MENU_PRICE
        , CATEGORY_CODE
        , ORDERABLE_STATUS
        FROM TBL_MENU
    </select>

<!--    사용자의 입력값을 활용(parameterType)한 쿼리(feat.mybatis 홈페이지 '매퍼설정' 참조-->
    <select id="selectMenu" resultMap="menuResultMap" parameterType="_int">
        SELECT
        MENU_CODE
        , MENU_NAME
        , MENU_PRICE
        , CATEGORY_CODE
        , ORDERABLE_STATUS
        FROM TBL_MENU
<!--    WHERE MENU_CODE = ?     -->
    WHERE MENU_CODE = #{menuCode}
</select>
</mapper>